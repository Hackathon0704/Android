<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_purple"
    >
    <ImageButton
        android:id="@+id/dreaminterpretation_expert_close_ib"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_close_24"
        android:background="@color/dark_purple"
        app:layout_constraintTop_toTopOf="@id/dreaminterpretation_expert_save_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/dreaminterpretation_expert_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/pretendardvariable"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dreaminterpretation_expert_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardvariable"
        android:text="전문가 게시글 작성"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/dreaminterpretation_expert_save_tv"
        app:layout_constraintStart_toEndOf="@+id/dreaminterpretation_expert_close_ib"
        app:layout_constraintTop_toTopOf="@+id/dreaminterpretation_expert_save_tv" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_filled"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dreaminterpretation_expert_delete_tv"
        app:layout_constraintStart_toStartOf="@id/dreaminterpretation_expert_insert_title_et"/>
    <ImageView
        android:id="@+id/crown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crown"
        app:layout_constraintTop_toTopOf="@+id/share"
        app:layout_constraintStart_toEndOf="@+id/share"
        app:layout_constraintBottom_toBottomOf="@+id/share"/>
    <TextView
        android:id="@+id/dreaminterpretation_expert_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="홍길동"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@+id/crown"
        app:layout_constraintStart_toEndOf="@+id/crown"
        app:layout_constraintBottom_toBottomOf="@+id/crown"
        android:textColor="@color/white"
        />
    <EditText
        android:id="@+id/dreaminterpretation_expert_insert_title_et"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/dreaminterpretation_expert_id_tv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_round_corner_rectangle"
        android:hint="제목(최대 20자)"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
    <EditText
        android:id="@+id/dreaminterpretation_expert_insert_content_et"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:background="@drawable/edittext_round_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/dreaminterpretation_expert_insert_title_et"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="내용을 입력하세요"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:gravity="center"

        />



</androidx.constraintlayout.widget.ConstraintLayout>