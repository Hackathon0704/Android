<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <TextView
        android:id="@+id/register_check_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입에 성공했어요!\n로그인을 진행해주세요"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:lineSpacingExtra="5dp"/>

    <Button
        android:id="@+id/register_check_btn"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:background="@drawable/main_button"
        android:text="로그인"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"/>

    <ImageView
        android:id="@+id/register_check_character_iv"
        android:layout_width="166dp"
        android:layout_height="184dp"
        android:src="@drawable/puang"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_check_main_tv"
        android:layout_marginTop="92dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>