<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B0076"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김지유"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="admin1234"
                    android:textColor="#CCCCCC"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|top">

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="변경"
                    android:textColor="#CCCCCC"
                    android:textSize="18sp"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/tv_edit_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="4dp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#600080">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friend_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="친구"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="20dp" />

                    <TextView
                        android:id="@+id/friend_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="admin5678님 외 9명"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="20dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/manage_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="10dp" />

                <ImageView
                    android:id="@+id/arrow_iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#600080">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dream_interpretation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="꿈해몽"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="20dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_dream_interpretation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/manage_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="10dp" />

                <ImageView
                    android:id="@+id/arrow_iv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#600080">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pro_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전문가의 꿈 해몽"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="20dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_pro_dream_interpretation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/manage_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="10dp" />

                <ImageView
                    android:id="@+id/arrow_iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#600080">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friend_share_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="친구와의 꿈 공유"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="20dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_friend_dream_interpretation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/manage_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="10dp" />

                <ImageView
                    android:id="@+id/arrow_iv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:tint="@android:color/white"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
