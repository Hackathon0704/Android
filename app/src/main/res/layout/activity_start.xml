<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <Button
        android:id="@+id/start_start_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/main_button"
        android:text="시작하기"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_login_btn"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="14dp"/>

    <Button
        android:id="@+id/start_login_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/main_button"
        android:text="로그인"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"/>
    
    <TextView
        android:id="@+id/start_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기억하고 싶은 꿈을 자유롭게 기록해보세요"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_start_btn"
        android:layout_marginBottom="103dp"/>
    
    <ImageView
        android:id="@+id/start_character_iv"
        android:layout_width="166dp"
        android:layout_height="184dp"
        android:src="@drawable/puang"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/start_logo_iv"
        android:layout_marginBottom="28dp"/>
    
    <ImageView
        android:id="@+id/start_logo_iv"
        android:layout_width="226dp"
        android:layout_height="64dp"
        android:scaleType="fitXY"
        android:src="@drawable/puang_back"
        app:layout_constraintBottom_toTopOf="@id/start_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>