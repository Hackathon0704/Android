<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dreamdiary_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/dreamdiary_save_tv"
        app:layout_constraintEnd_toStartOf="@id/dreamdiary_save_tv"
        android:layout_marginEnd="20dp"

        />

    <TextView
        android:id="@+id/dreamdiary_save_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dreamdiary_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="74dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="72dp"
        />

    <TextView
        android:id="@+id/dreamdiary_currentdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2024년 7월 4일 목요일"
        app:layout_constraintTop_toBottomOf="@+id/dreamdiary_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        />

    <TextView
        android:id="@+id/dreamdiary_wakeuptime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기상 시간"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="@+id/dreamdiary_date_tv"
        />

    <TextView
        android:id="@+id/dreamdiary_sleeptime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취침 시간"
        app:layout_constraintTop_toTopOf="@+id/dreamdiary_date_tv"
        app:layout_constraintEnd_toStartOf="@+id/dreamdiary_wakeuptime_tv"
        android:textSize="10sp"
        android:layout_marginEnd="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23:00"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/dreamdiary_sleeptime_tv"
        app:layout_constraintTop_toBottomOf="@+id/dreamdiary_sleeptime_tv"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:00"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/dreamdiary_wakeuptime_tv"
        app:layout_constraintTop_toBottomOf="@+id/dreamdiary_wakeuptime_tv"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="4dp"
        />

    <EditText
        android:id="@+id/dreamdiary_insert_title_et"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/dreamdiary_currentdate_tv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edittext_round_corner_rectangle"
        android:hint="제목을 입력하세요"
        android:gravity="center"
        android:textSize="10sp"
        />
    <EditText
        android:id="@+id/dreamdiary_insert_content_et"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/edittext_round_corner_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/dreamdiary_insert_title_et"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:hint="내용을 입력하세요"
        android:textSize="10sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/dreamdiary_category_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="카테고리"
        app:layout_constraintTop_toBottomOf="@+id/dreamdiary_insert_content_et"
        app:layout_constraintStart_toStartOf="@id/dreamdiary_insert_content_et"
        />







</androidx.constraintlayout.widget.ConstraintLayout>