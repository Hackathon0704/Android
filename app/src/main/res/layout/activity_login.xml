<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <Button
        android:id="@+id/login_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/main_button"
        android:text="로그인"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"/>

    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="206dp"
        android:layout_height="56.97dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"/>


    <TextView
        android:id="@+id/login_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="16sp"
        android:layout_marginTop="46dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"/>
    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="아이디를 입력해주세요"
        android:textColorHint="#666666"
        android:textColor="#666666"
        android:textSize="15sp"
        android:inputType="text"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_id_tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dark_grey_button"/>
    <TextView
        android:id="@+id/login_id_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디를 확인해주세요"
        android:textColor="@color/red"
        android:textSize="11sp"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintTop_toBottomOf="@id/login_id_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="38dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/login_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_id_et"/>
    <EditText
        android:id="@+id/login_pw_et"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="비밀번호를 입력해주세요"
        android:textColorHint="#666666"
        android:textColor="#666666"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pw_tv"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dark_grey_button"/>
    <TextView
        android:id="@+id/login_pw_check_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 확인해주세요"
        android:textColor="@color/red"
        android:textSize="11sp"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintTop_toBottomOf="@id/login_pw_et"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="38dp"
        android:layout_marginTop="5dp"/>
    
    
    <TextView
        android:id="@+id/login_find_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textColor="#999999"
        android:textSize="14sp"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintBottom_toTopOf="@id/login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/login_find_pw_tv"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/login_find_pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textColor="#E9E9E9"
        android:textSize="14sp"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintBottom_toTopOf="@id/login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/login_find_id_tv"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>