<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/diary_user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지유"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/diary_main_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님,"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintStart_toEndOf="@id/diary_user_name_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/diary_main_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 꿈을 기록해봐요"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/pretendardvariable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diary_user_name_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"/>
    
    <ImageView
        android:id="@+id/diary_main_edit_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/edit_icon"
        app:layout_constraintStart_toEndOf="@id/diary_main_tv2"
        app:layout_constraintTop_toTopOf="@id/diary_main_tv2"
        android:layout_marginStart="8dp"/>
    
    <TextView
        android:id="@+id/diary_null_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 작성된 일기가 없어요"
        android:textColor="@color/white"
        android:lineSpacingExtra="15dp"
        android:fontFamily="@font/pretendardvariable"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/diary_null_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/diary_null_tv1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/diary_null_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dream Girl에서 "
            android:textColor="@color/white"
            android:lineSpacingExtra="15dp"
            android:fontFamily="@font/pretendardvariable"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/diary_null_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지유"
            android:textColor="@color/white"
            android:lineSpacingExtra="15dp"
            android:fontFamily="@font/pretendardvariable"
            android:textSize="14sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/diary_null_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="님의 꿈을 기록해보세요"
            android:textColor="@color/white"
            android:lineSpacingExtra="15dp"
            android:fontFamily="@font/pretendardvariable"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diary_main_tv2"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>